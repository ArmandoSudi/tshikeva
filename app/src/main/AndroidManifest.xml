<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afrisusers.tshikeva">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.ArticleDetailActivity" />
        <activity
            android:name=".UI.UniversityActivity"
            android:label="@string/title_activity_label_universities"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".UI.EvenementActivity"
            android:label="@string/title_activity_evenement" />
        <activity
            android:name=".UI.ContactActivity"
            android:label="@string/Contact" />
        <activity
            android:name=".UI.PromotionActivity"
            android:label="@string/Promotion" />
        <activity
            android:name=".UI.InsolitesActivity"
            android:label="@string/Insolite" />
        <activity android:name=".UI.QuiQommesNousActivity" />
        <activity android:name=".UI.QuiSommesNousActivity"></activity>
    </application>

</manifest>